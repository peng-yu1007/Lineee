
@model Lineee.Models.Report
@{
    ViewBag.Title = "Secret";
}
<h2>Secret</h2>

@using (Html.BeginForm("Decrypt", "Reports", FormMethod.Post))
{
    <table class="table table-striped table-primary">
        <tr>
            <td>
                解密前字串 |
                @Html.TextBoxFor(model => model.text)
                @Html.ValidationMessageFor(model => model.text)
            </td>
            <td>
                金鑰 |
                @Html.TextBoxFor(model => model.key)
                @Html.ValidationMessageFor(model => model.key)
            </td>
            <td>
                <button type="submit">解密</button>
            </td>
        </tr>
        <td>
            網址 |
            @ViewBag.address
        </td>
        <td>
            
        </td>
        <td>
            
        </td>
    </table>
}

